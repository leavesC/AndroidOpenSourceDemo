<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomViewMainActivity"
    tools:ignore="UsingOnClickInXml">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            style="@style/BtnTheme"
            android:onClick="startWaveViewActivity"
            android:text="WaveView" />

        <Button
            style="@style/BtnTheme"
            android:onClick="startWaveLoadingViewActivity"
            android:text="WaveLoadingView" />

        <Button
            style="@style/BtnTheme"
            android:onClick="startPointBeatViewActivity"
            android:text="PointBeatView" />

        <Button
            style="@style/BtnTheme"
            android:onClick="startCircleRefreshViewActivity"
            android:text="CircleRefreshView" />

        <Button
            style="@style/BtnTheme"
            android:onClick="startTaiJiViewActivity"
            android:text="TaiJiView" />

        <Button
            style="@style/BtnTheme"
            android:onClick="startFloatBallView"
            android:text="FloatBallView" />

    </LinearLayout>

</ScrollView>