<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConstraintLayoutMainActivity">

    <Button
        android:id="@+id/btn_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Flow"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Layer"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_constraintSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="ConstraintSet"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_circularRevealHelper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="CircularRevealHelper"
        android:textAllCaps="false" />

</LinearLayout>